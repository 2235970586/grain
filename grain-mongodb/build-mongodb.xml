<?xml version="1.0"?>
<project name="lib" default="dist" basedir=".">
	<property name="lib-src" location="${mongodb.dir}/src/main/java" />
	<property name="lib-build" location="${mongodb.dir}/build" />
	<property name="lib-dist" location="${mongodb.dir}/dist" />
	<path id="libs">
		<fileset dir="lib">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${log.dir}/dist">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<target name="init">
		<mkdir dir="${lib-build}" />
	</target>
	<target name="compilelib" depends="init">
		<javac destdir="${lib-build}" debug="true" source="1.8" target="1.8" encoding="UTF-8" includeantruntime="on">
			<classpath>
				<path refid="libs" />
			</classpath>
			<src path="${lib-src}" />
		</javac>
	</target>
	<target name="distlib" depends="compilelib">
		<mkdir dir="${lib-dist}" />
		<jar destfile="${lib-dist}/grain-mongodb.jar">
			<fileset dir="${lib-build}">
				<include name="**/**" />
			</fileset>
		</jar>
	</target>
	<target name="dist" depends="clean, distlib, distdepend" />
	<target name="clean" description="clean up">
		<delete dir="${lib-build}" />
		<delete dir="${lib-dist}" />
	</target>
	<target name="distdepend">
		<mkdir dir="${lib-dist}/grain-mongodb"/>
		<copy file="${lib-dist}/grain-mongodb.jar" todir="${lib-dist}/grain-mongodb" />
		<copy file="${log.dir}/dist/grain-log.jar" todir="${lib-dist}/grain-mongodb" />
		<copydir src="${mongodb.dir}/lib" dest="${lib-dist}/grain-mongodb"></copydir>
	</target>
</project>